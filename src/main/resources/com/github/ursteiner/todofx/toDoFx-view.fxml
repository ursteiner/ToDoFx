<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.geometry.Insets?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.github.ursteiner.todofx.ToDoFxController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <HBox>
        <VBox maxWidth="250">
            <Label>Name</Label>
            <TextField fx:id="taskNameInput"/>
            <padding>
                <Insets top="10.0"/>
            </padding>
            <Button text="Add task" onAction="#onAddTaskButtonClick"/>
        </VBox>
        <VBox minWidth="10">

        </VBox>
        <VBox>
            <TableView fx:id="tableView" minWidth="400">
                <columns>
                    <TableColumn text="Name" minWidth="250">
                        <cellValueFactory><PropertyValueFactory property="nameProperty" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Date" minWidth="100">
                        <cellValueFactory><PropertyValueFactory property="dateProperty" />
                        </cellValueFactory>
                    </TableColumn>
                </columns>
            </TableView>
        </VBox>
    </HBox>


</VBox>
