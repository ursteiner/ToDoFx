<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.github.ursteiner.todofx.controller.TasksTabController">
    <HBox spacing="20" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
          AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
        </padding>

        <VBox minWidth="200" maxWidth="300" HBox.hgrow="NEVER" spacing="10">
            <TitledPane fx:id="newTaskPane" collapsible="false" text="New task description:">
                <VBox>
                    <padding>
                        <Insets/>
                    </padding>
                    <TextArea fx:id="taskNameInput" wrapText="true" VBox.vgrow="ALWAYS"/>
                </VBox>
            </TitledPane>

            <GridPane maxWidth="Infinity">
                <columnConstraints>
                    <ColumnConstraints percentWidth="49"/>
                    <ColumnConstraints percentWidth="2"/>
                    <ColumnConstraints percentWidth="49"/>
                </columnConstraints>

                <ComboBox fx:id="newCategoryComboBox" HBox.hgrow="ALWAYS" GridPane.columnIndex="0" maxWidth="Infinity"/>
                <Button fx:id="addTaskButton" onAction="#onAddTaskButtonClick" text="Add task" HBox.hgrow="ALWAYS"
                        GridPane.columnIndex="2" maxWidth="Infinity"/>
            </GridPane>

            <TitledPane fx:id="editTaskPane" collapsible="false" text="Edit task description:">
                <VBox>
                    <padding>
                        <Insets/>
                    </padding>
                    <TextArea fx:id="taskUpdateArea" visible="false" wrapText="true" VBox.vgrow="ALWAYS"/>
                </VBox>
            </TitledPane>

            <GridPane maxWidth="Infinity">
                <columnConstraints>
                    <ColumnConstraints percentWidth="49"/>
                    <ColumnConstraints percentWidth="2"/>
                    <ColumnConstraints percentWidth="49"/>
                </columnConstraints>
                <ComboBox fx:id="updateCategoryComboBox" HBox.hgrow="ALWAYS" GridPane.columnIndex="0"
                          maxWidth="Infinity"/>
                <Button fx:id="updateTaskButton" onAction="#onUpdateTaskButtonClick" text="Update task" visible="false"
                        HBox.hgrow="ALWAYS" GridPane.columnIndex="2" maxWidth="Infinity"/>
            </GridPane>
        </VBox>

        <VBox HBox.hgrow="ALWAYS" spacing="10">
            <HBox spacing="5">
                <TextField fx:id="searchTextField" onAction="#onSearchButtonClick" HBox.hgrow="ALWAYS"/>
                <Button fx:id="searchButton" onAction="#onSearchButtonClick" text="ðŸ” suchen"/>
                <Button onAction="#onClearSearchButton" text="âœ–"/>
            </HBox>
            <TableView fx:id="tableView" onMouseClicked="#onTaskSelected" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="idColumn" minWidth="50" text="Id">
                        <cellValueFactory>
                            <PropertyValueFactory property="idProperty"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="dateColumn" minWidth="100" text="Date">
                        <cellValueFactory>
                            <PropertyValueFactory property="dateProperty"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="descriptionColumn" minWidth="230" text="Description">
                        <cellValueFactory>
                            <PropertyValueFactory property="nameProperty"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="categoryColumn" minWidth="100" text="Category">
                        <cellValueFactory>
                            <PropertyValueFactory property="categoryProperty"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="doneColumn" minWidth="50" style="-fx-alignment:center;" text="Done">
                        <cellValueFactory>
                            <PropertyValueFactory property="isDoneIconProperty"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="resolvedDateColumn" minWidth="110" text="Done">
                        <cellValueFactory>
                            <PropertyValueFactory property="resolvedDateProperty"/>
                        </cellValueFactory>
                    </TableColumn>
                </columns>
            </TableView>

            <HBox spacing="10" alignment="CENTER">
                <Button fx:id="resolveTaskButton" onAction="#onCompletedTaskButtonClick" text="Un/resolve task"/>
                <Pane HBox.hgrow="ALWAYS"/>
                <CheckBox fx:id="hideDoneTasksCheckBox" onAction="#getTasksBasedOnFilters" selected="true"
                          text="hide done tasks"/>
                <Pane HBox.hgrow="ALWAYS"/>
                <Label fx:id="numberOfTasks"/>
                <Pane HBox.hgrow="ALWAYS"/>
                <Button fx:id="deleteTaskButton" onAction="#onDeleteTaskButtonClick" text="Delete task"/>
            </HBox>
        </VBox>
    </HBox>
</AnchorPane>
