<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane maxHeight="Infinity" maxWidth="Infinity"
            xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.github.ursteiner.todofx.controller.SettingsTabController">
    <HBox spacing="20" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
          AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </padding>

        <VBox HBox.hgrow="ALWAYS" spacing="10">
            <TitledPane fx:id="categoriesTitledPane" collapsible="false" minHeight="300" VBox.vgrow="ALWAYS">
                <ListView fx:id="categoriesListView" maxHeight="Infinity" VBox.vgrow="ALWAYS"
                          onMouseClicked="#onCategorySelected"/>
            </TitledPane>
            <HBox spacing="10">
                <TextField fx:id="categoryTextField" HBox.hgrow="ALWAYS" />
                <Button onAction="#onClearSelectedCategoryButtonClick" text="âœ–" />
            </HBox>
            <HBox spacing="10">
                <Button fx:id="addCategoryButton" onAction="#onAddCategoryButtonClick" text="Add category" />
                <Pane HBox.hgrow="ALWAYS" />
                <Button fx:id="updateCategoryButton" onAction="#onUpdateCategoryButtonClick" text="Update category" />
                <Pane HBox.hgrow="ALWAYS" />
                <Button fx:id="deleteCategoryButton" onAction="#onDeleteCategoryButtonClick" text="Delete category" />
            </HBox>
        </VBox>

        <Pane HBox.hgrow="ALWAYS" />

        <VBox alignment="CENTER_RIGHT" spacing="10" HBox.hgrow="ALWAYS">
            <ComboBox fx:id="selectLanguageComboBox" onAction="#onLanguageSelectedComboBox" />
            <Pane VBox.vgrow="ALWAYS" />
            <Hyperlink onAction="#openLink" text="https://github.com/ursteiner/ToDoFx" />
        </VBox>
    </HBox>
</AnchorPane>
